# LensFlow CRM Environment Variables

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lensflow

# МойСклад API
MOYSKLAD_API_URL=https://api.moysklad.ru/api/remap/1.2
MOYSKLAD_USERNAME=your_username
MOYSKLAD_PASSWORD=your_password
MOYSKLAD_SYNC_INTERVAL=3600

# Auth
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Notifications
# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=LensFlow CRM <noreply@lensflow.com>

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
